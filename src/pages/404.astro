---
import Layout from "$layouts/Layout.astro"
import oopsSrc from "../../public/oops.jpg"
import ImageWrapper from "$components/ImageWrapper.astro"
---

<Layout title="Page not found">
  <div class="m-auto pt-24 grid place-items-center">
    <ImageWrapper
      src={oopsSrc as unknown as string}
      alt=""
      widths={[150, 270]}
      sizes="(max-width: 640px) 150px, (max-width: 1600px) 270px"
      infer
      quality={75}
      class="rounded-lg w-60"
    />
    <h1 class="font-bold font-hero-heading text-6xl leading-none my-5">404</h1>
    <span class="text-xl"
      >Where you looking for somethin'? Looks like you went to the wrong pile.</span
    >
    <div class="mt-8">
      <a
        href="/"
        class="py-2 px-3.5 bg-kuro-lavender-800 rounded-md select-none"
        >Take me home</a
      >
    </div>
  </div>
</Layout>
