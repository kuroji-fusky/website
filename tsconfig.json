{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "$lib/*": [
        "lib/*"
      ],
      "$components/*": [
        "components/*"
      ],
      "$layouts/*": [
        "layouts/*"
      ],
      "$stores/*": [
        "stores/*"
      ]
    },
    "types": [
      "unplugin-icons/types/astro"
    ],
    // For Lit components
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  },
  "exclude": [
    "packages/shared/**",
  ]
}