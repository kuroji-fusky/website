---
import type { BlogPostsReturnType } from "$lib/contentful"
import BlogItem from "./BlogItem.astro"

interface Props {
  posts: BlogPostsReturnType
  heading?: string
  referrer?: string
}

const { posts, heading, referrer } = Astro.props
---

<section>
  {heading && <h2 class="text-3xl py-6 font-bold">{heading}</h2>}
  <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-10">
    {
      posts.map((item) => (
        <BlogItem
          banner={item.banner}
          title={item.title}
          description={item.description}
          date={item.date}
          slug={item.slug}
          category={item.category}
          authors={item.authors}
          size="small"
          referrer={referrer ?? ""}
        />
      ))
    }
  </div>
</section>
