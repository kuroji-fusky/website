---
import LogoBrand from "~icons/kuro/logo-brand"

import NavbarTitle from "./NavbarTitle.svelte"
import NavbarItems from "./NavbarItems.svelte"
import NavbarSearch from "./NavbarSearch.svelte"
---

<div class="z-20 sticky top-0">
  <a
    href="#skip-to-content"
    class="fixed top-2 left-2 pointer-events-none focus:pointer-events-auto focus:opacity-100 focus:translate-x-0 translate-x-full opacity-0 bg-kuro-lavender-700 z-50 px-4 py-2.5 rounded-md"
    data-astro-prefetch="false">Skip to content?</a
  >
  <nav class="py-1.5 bg-kuro-dark2">
    <div
      class="padding-width-responsive mx-auto flex items-center max-w-screen-xl"
    >
      <div class="flex flex-1 items-center gap-x-2 min-w-0">
        <a
          href="/"
          title="Home page"
          class="py-2 pr-1 flex-shrink-0 [&_svg]:!h-[1.33rem]"
        >
          <LogoBrand />
        </a>
        <NavbarTitle client:idle />
      </div>
      <div class="flex flex-shrink-0">
        <NavbarItems client:load />
      </div>
    </div>
    <NavbarSearch client:only="svelte" />
  </nav>
</div>
