---
interface Props {
  itemprop?: string
}

const { itemprop } = Astro.props
---

<article
  id="article-wrapper"
  class="prose-headings:font-bold [&_p]:leading-7 lg:[&_p]:leading-8"
  {itemprop}
>
  <slot />
</article>

<style is:global>
  article#article-wrapper {
    @apply prose-a:text-kuro-lavender-200 hover:prose-a:text-kuro-lavender-300 hover:prose-a:no-underline font-medium min-w-0 text-base lg:text-lg prose-p:font-normal w-full text-white prose-h2:text-3xl prose-h3:text-2xl prose-headings:py-1.5 first:prose-p:mt-0 last:prose-p:mb-0 prose-p:my-3 [&_li_p]:my-0;
  }
</style>
